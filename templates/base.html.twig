<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        Formation Symfony | {% block title '' %}
    </title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
{% block body %}
    {{ include('includes/_menu.html.twig') }}

    <main class="container">
        <div class="row">
            <div class="col-8 box">
                {% block page_content %}
                {% endblock %}
            </div>
            <div class="col-4 box">
                {{ render(controller('App\\Controller\\NewsController::getLastNews', {'count': 3})) }}
            </div>
        </div>
    </main>
{% endblock %}
</body>
</html>
